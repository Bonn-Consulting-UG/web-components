{
  "name": "bcg-components",
  "description": "Bcg-components following open-wc recommendations",
  "license": "MIT",
  "author": "bcg-components",
  "version": "0.0.0",
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && npm run analyze -- --exclude dist && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds --node-resolve -c .storybook/server.mjs  \"",
    "storybook:build": "tsc && npm run analyze -- --exclude dist && build-storybook"
  },
  "dependencies": {
    "@lion/accordion": "^0.10.0",
    "@lion/button": "^0.18.0",
    "@lion/calendar": "^0.20.0",
    "@lion/checkbox-group": "^0.21.0",
    "@lion/collapsible": "^0.9.0",
    "@lion/combobox": "^0.11.0",
    "@lion/core": "^0.23.0",
    "@lion/dialog": "^0.16.0",
    "@lion/fieldset": "^0.22.0",
    "@lion/form": "^0.15.0",
    "@lion/form-core": "^0.18.0",
    "@lion/icon": "^0.16.0",
    "@lion/input": "^0.18.0",
    "@lion/input-amount": "^0.17.0",
    "@lion/input-date": "^0.15.0",
    "@lion/input-datepicker": "^0.26.0",
    "@lion/input-email": "^0.16.0",
    "@lion/input-iban": "^0.19.0",
    "@lion/input-range": "^0.13.0",
    "@lion/input-stepper": "^0.9.0",
    "@lion/input-tel": "^0.2.0",
    "@lion/input-tel-dropdown": "^0.2.0",
    "@lion/listbox": "^0.14.0",
    "@lion/localize": "^0.25.0",
    "@lion/pagination": "^0.9.0",
    "@lion/progress-indicator": "^0.9.0",
    "@lion/radio-group": "^0.21.0",
    "@lion/select": "^0.17.0",
    "@lion/select-rich": "^0.31.0",
    "@lion/steps": "^0.12.0",
    "@lion/switch": "^0.21.0",
    "@lion/tabs": "^0.13.0",
    "@lion/textarea": "^0.16.0",
    "@lion/tooltip": "^0.24.0",
    "@storybook/addons": "^6.5.9",
    "dark-theme-utils": "^0.4.0",
    "lit": "^2.2.5"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@open-wc/dev-server-hmr": "^0.1.2",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "next",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-esbuild": "^0.3.0",
    "@web/dev-server-storybook": "next",
    "@web/test-runner": "next",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
