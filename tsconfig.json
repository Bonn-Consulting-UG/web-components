{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false
  },
  "include": ["**/*.ts", "src/component/*.js", "src/component/docs/*.js", "src/components/button/docs/index.stories.ts"],
  "exclude": ["src/utils/_mixins", "dist"]

}
