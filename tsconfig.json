{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2022", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false
  },
  "include": ["**/*.ts", "src/component/*.js", "src/component/docs/*.js", "src/compositions/docs/*.js"],
  "exclude": ["src/utils/_mixins", "dist"]

}
